{
    "classes": {
        "simple-switch": {
            "parent": "switch",
            "cls": "p4ws.mnhlp.SimpleSwitchGrpc",
            "log_console": true,
            "pcaps_dir": "pcap_output"
        }
    },
    "hosts": [ "h1", "h2" ],
    "switches": {
        "s1":
        {
            "class": "simple-switch",
            "p4_target_conf": "../build/myprog/bmv2/main.json",
            "listenPort": 9090,
            "grpc_server_port": 9559,
            "sw_stdout": "logs/s1-stdout.log",
            "sw_stderr": "logs/s1-stderr.log"
        },
        "s2":
        {
            "class": "simple-switch",
            "p4_target_conf": "../build/myprog/bmv2/main.json",
            "listenPort": 9091,
            "grpc_server_port": 9560,
            "sw_stdout": "logs/s2-stdout.log",
            "sw_stderr": "logs/s2-stderr.log"
        }
    },
    "links": [
        [ "h1", "s1", 1, 1 ],
        [ "s1", "s2", 2, 1 ],
        [ "h2", "s2", 1, 2 ]
    ]
}
